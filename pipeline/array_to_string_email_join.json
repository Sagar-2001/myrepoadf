					"isSequential": true,
					"activities": [
						{
							"name": "Append variable1",
							"type": "AppendVariable",
							"dependsOn": [],
							"userProperties": [],
							"typeProperties": {
								"variableName": "emailtemp",
								"value": {
									"value": "@item().Login_email",
									"type": "Expression"
								}
							}
						}
					]
				}
			},
			{
				"name": "Set variable2",
				"type": "SetVariable",
				"dependsOn": [
					{
						"activity": "ForEach1",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"userProperties": [],
				"typeProperties": {
					"variableName": "email",
					"value": {
						"value": "@join(variables('emailtemp'),' ' )",
						"type": "Expression"
					}
				}
			}
		],
		"variables": {
			"email": {
				"type": "String"
